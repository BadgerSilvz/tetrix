#include <PRIZM.h>
PRIZM prizm;

void setup() {
  prizm.PrizmBegin();
  //Pg165
  prizm.setMotorInvert(2,1);
}
void loop() {
  //Drive forward 1m Pg 164
  prizm.setMotorSpeeds(360,360);
  delay(4000);
  //Stop and turn right
  prizm.setMotorSpeeds(-360,360);
  delay(750);
  //Go forward slow
    prizm.setMotorSpeeds(500,100);
  delay(500);
  //Go Forward Slow and Stop
    delay(600);
  //Go forward slow
    prizm.setMotorSpeeds(360,360);
  delay(150);
  //turn left
  prizm.PrizmEnd();
}
